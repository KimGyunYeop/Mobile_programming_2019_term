<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.udong_mp2019.circleList.CircleListActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stretchColumns="0">
        <TableRow>
            <EditText
                android:id = "@+id/ET_searchCircle"
                android:hint = "search circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id = "@+id/IB_searchCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:padding = "0dp"
                android:src="@drawable/searchbutton"
                android:scaleType="fitXY"/>
        </TableRow>
        <View
            android:background="@color/divider"
            android:layout_height="2dp"/>
    </TableLayout>

    <ListView
        android:id = "@+id/LV_searchResult"
        android:divider="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/main"
        android:stretchColumns="0">
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Circle List"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30sp"
                android:background="@color/main"
                />
            <ImageButton
                android:id = "@+id/IB_createCircle"
                android:layout_width="35dp"
                android:layout_height="41dp"
                android:layout_gravity="end"
                android:padding="0dp"
                android:src="@drawable/ic_add_black_24dp"
                android:background="@color/main"
                android:scaleType="fitXY"/>
        </TableRow>
        <View
            android:background="@color/main_dark"
            android:layout_height="2dp"/>
    </TableLayout>

    <ListView
        android:id = "@+id/LV_myCircleList"
        android:divider="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageButton
        android:layout_width="43dp"
        android:layout_height="60dp"
        android:gravity="right"
        android:scaleType="centerCrop"
        android:src="@drawable/secession"
        android:background="@color/white"
        android:layout_gravity="right"
        android:id="@+id/secession_App"/>

</LinearLayout>